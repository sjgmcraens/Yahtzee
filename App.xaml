                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Ellipse Grid.Row="0"
                                             Grid.Column="2"
                                             Style="{StaticResource ResourceKey=Die_Dot}"/>
                                <Ellipse Grid.Row="2"
                                             Grid.Column="0"
                                             Style="{StaticResource ResourceKey=Die_Dot}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
