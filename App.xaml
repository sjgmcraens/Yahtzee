                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Ellipse Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource ResourceKey=Die_Dot}"/>
                                <Ellipse Grid.Row="1"
